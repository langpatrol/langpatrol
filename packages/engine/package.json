{
  "name": "@langpatrol/engine",
  "version": "0.1.6",
  "description": "Local prompt validation engine for LangPatrol",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@langpatrol/rules": "workspace:*",
    "@xenova/transformers": "^2.17.2",
    "ajv": "^8.12.0",
    "diff": "^7.0.0",
    "js-tiktoken": "^1.0.10"
  },
  "devDependencies": {
    "@types/diff": "^5.0.8",
    "@types/node": "^20.11.24",
    "tsup": "^8.0.1",
    "typescript": "^5.6.0",
    "vitest": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
