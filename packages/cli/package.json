{
  "name": "langpatrol-cli",
  "version": "0.1.3",
  "description": "CLI tool for analyzing prompts with LangPatrol",
  "license": "MIT",
  "type": "module",
  "bin": {
    "langpatrol": "./bin/langpatrol.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "langpatrol": "workspace:*",
    "picocolors": "^1.0.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@langpatrol/eslint-config": "workspace:*",
    "@langpatrol/prettier-config": "workspace:*",
    "@types/node": "^20.11.24",
    "tsup": "^8.0.1",
    "typescript": "^5.6.0",
    "vitest": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

