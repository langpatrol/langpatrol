{
  "name": "langpatrol",
  "version": "0.1.3",
  "description": "Developer SDK for pre-inference prompt validation and linting",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@langpatrol/engine": "workspace:*"
  },
  "devDependencies": {
    "@langpatrol/eslint-config": "workspace:*",
    "@langpatrol/prettier-config": "workspace:*",
    "@types/node": "^20.11.24",
    "tsup": "^8.0.1",
    "typescript": "^5.6.0",
    "vitest": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
